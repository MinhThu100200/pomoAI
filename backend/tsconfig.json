{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",                        // Cho ph√©p alias path
    "outDir": "dist",
    "paths": {
      "@types/*": ["types/*"],
      "@pomoai/shared-types": ["../shared-types/src"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
  }
}
