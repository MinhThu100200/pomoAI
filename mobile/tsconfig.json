{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,                     
    "jsx": "react-native",
    "baseUrl": ".", // Cho ph√©p alias path
    "paths": {
      "@*": ["src/*", "../src/*"],
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@constants/*": ["src/constants/*"],
      "@utils/*": ["src/utils/*"],
      "@provider/*": ["src/provider/*"],
      "@hooks/*": ["src/hooks/*"],
      "@store/*": ["src/stores/*"],
      "@theme/*": ["src/theme/*"],
      "@types/*": ["src/types/*"],
      "@navigation/*": ["src/navigations/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/components/pages/*"],
      "@pomoai/shared-types": ["../shared-types/src"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx", "src/i18n/resources.ts",              
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}

