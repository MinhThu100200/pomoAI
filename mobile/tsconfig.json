{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@*": ["src/*", "../src/*"],
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@constants/*": ["src/constants/*"],
      "@utils/*": ["src/utils/*"],
      "@provider/*": ["src/provider/*"],
      "@hooks/*": ["src/hooks/*"],
      "@store/*": ["src/stores/*"],
      "@theme/*": ["src/theme/*"],
      "@types/*": ["src/types/*"],
      "@navigation/*": ["src/navigations/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/components/pages/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../types"                    // nếu dùng types chung
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
