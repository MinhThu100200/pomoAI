{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "skipLibCheck": true,
    "jsx": "react-native",
    "baseUrl": "./",
    "paths": {
       "@*": ["src/*", "../src/*"],
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@constants/*": ["src/constants/*"],
      "@utils/*": ["src/utils/*"],
      "@provider/*": ["src/provider/*"],
      "@hooks/*": ["src/hooks/*"],
      "@store/*": ["src/stores/*"],
      "@theme/*": ["src/theme/*"],
      "@types/*": ["src/types/*"],
      "@navigation/*": ["src/navigations/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/components/pages/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"], //include d.ts với những declare modules ["svg.d.ts", "global.d.ts", "**/*.ts", "**/*.tsx"]
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
