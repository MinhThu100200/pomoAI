{
  "name": "pomoAI",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "codegen-and": "cd android && ./gradlew generateCodegenArtifactsFromSchema",
    "codegen-ios": "cd ios && bundle install && bundle exec pod install",
    "detox-server": "detox run-server",
    "e2e:ios": "detox test -c ios.sim.release",
    "e2e:android": "detox test -c android.emu.release",
    "e2e:android-debug": "detox test -c android.emu.debug",
    "e2e:ios-debug": "detox test -c ios.sim.debug",
    "e2e:ios-reuse": "detox test -c ios.sim.release --reuse",
    "e2e:android-reuse": "detox test -c android.emu.release --reuse",
    "e2e:android-debug-reuse": "detox test -c android.emu.debug --reuse",
    "e2e:ios-debug-reuse": "detox test -c ios.sim.debug --reuse",
    "integration": "jest --clearCache && jest --config integration/jest.config.js",
    "build:ios": "detox build -c ios.sim.release",
    "build:ios-debug": "detox build -c ios.sim.debug",
    "build:android": "detox build -c android.emu.release",
    "build:android-debug": "detox build -c android.emu.debug",
    "clean:android": "pushd android && rm -fr ../android/detox/build/ && ./gradlew clean && popd",
    "verify-artifacts:ios": "jest ./scripts/verify_artifacts_are_not_missing.ios.test.js --testEnvironment node",
    "verify-artifacts:android": "jest ./scripts/verify_artifacts_are_not_missing.android.test.js --testEnvironment node"
  },
  "codegenConfig": {
    "name": "NativeLocalStorageSpec",
    "type": "modules",
    "jsSrcsDir": "src/specs",
    "modules": [
      "NativeGlobalUtils",
      "NativeLocalStorage"
    ],
    "android": {
      "javaPackageName": "com.nativemodules"
    }
  },
  "dependencies": {
    "@gorhom/bottom-sheet": "^5.1.4",
    "@gorhom/portal": "^1.0.14",
    "@notifee/react-native": "^9.1.8",
    "@react-native-community/hooks": "^100.1.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/native": "^7.1.8",
    "@react-navigation/native-stack": "^7.3.10",
    "@tanstack/react-query": "^5.74.7",
    "@tanstack/react-query-devtools": "^5.75.2",
    "axios": "^1.9.0",
    "immer": "^10.1.1",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-gesture-handler": "^2.25.0",
    "react-native-keyboard-spacer": "^0.4.1",
    "react-native-mmkv": "^3.2.0",
    "react-native-reanimated": "^3.17.5",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-screens": "^4.11.1",
    "react-native-svg": "^15.12.0",
    "styled-components": "^6.1.17",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "18.0.0",
    "@react-native-community/cli-platform-android": "18.0.0",
    "@react-native-community/cli-platform-ios": "18.0.0",
    "@react-native/babel-preset": "0.79.2",
    "@react-native/eslint-config": "0.79.2",
    "@react-native/metro-config": "0.79.2",
    "@react-native/typescript-config": "0.79.2",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-styled-components": "^2.1.4",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "detox": "^20.39.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.3.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.6.3",
    "prettier": "^3.5.3",
    "react-native-svg-transformer": "^1.5.1",
    "react-test-renderer": "18.2.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
